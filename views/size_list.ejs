<!DOCTYPE html>
<html lang="en">

    <head>
        <% include head %>
    </head>

    <body>
        <% include header %>

        <div class="container">
            <div class="main-content">

                <a href="/Size/Create" class="btn btn-default">New</a>
                <p><br></p>

                <table class="table table-responsive table-condensed table-bordered table-hover">
                    <tr>
                        <th class="col-sm-1">Sr.</th>
                        <th class="col-sm-10">Name</th>
                        <th class="col-sm-1"></th>
                    </tr>

                    <% var i = 1 %>
                    <% data.forEach(function(row) { %>
                        <tr>
                            <td><%= i++ %></td>
                            <td> <a href="/Size/Create?id=<%= row._id %>"> <%= row.SizeName %> </a> </td>
                            <td>
                                <form action="/Size/Delete?id=<%= row._id %>&amp;rev=<%= row._rev %>" method="post">
                                    <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>

                </table>

            </div>
        </div>

        <% include footer %>
    </body>

</html>
