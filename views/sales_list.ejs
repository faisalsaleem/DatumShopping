<!DOCTYPE html>
<html lang="en">

    <head>
        <% include head %>
    </head>

    <body>
        <% include header %>

        <div class="container">
            <div class="main-content">

                <table class="table table-responsive table-condensed table-bordered table-hover">
                    <tr>
                        <th>Sr.</th>
                        <th>Name</th>
                        <th>Sale Price</th>
                        <th>Discount</th>
                        <th>Paid</th>
                        <th></th>
                    </tr>

                    <% var i = 1 %>
                    <% data.forEach(function(row) { %>
                        <tr>
                            <td><%= i++ %></td>
                            <td> <a href="/Product/Create?id=<%= row.ProductID %>"> <%= row.ProductName %> </a> </td>
                            <td> <%= row.SalePrice %> </td>
                            <% if (row.DiscountAmount === 'undefined'){ %>
                                <td> 0 </td>
                            <% } else { %>
                                <td><%= row.DiscountAmount %></td>
                            <% } %>
                            <td> <%= row.ChargedAmount %> </td>
                            <td>
                                <form action="/Sales/Delete?id=<%= row._id %>&amp;rev=<%= row._rev %>" method="post">
                                    <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>

                </table>

            </div>
        </div>

        <% include footer %>
    </body>

</html>
